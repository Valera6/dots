# do remember that it just converts the sentletters according to the dvorak layout
capslock = overload(ctrl_vim, esc)

[ctrl_vim:C]
space = swap(vim_mode)
x = cut
c = copy
v = paste
delete = C-delete
backspace = C-backspace

[vim_mode:C]
space = swap(ctrl_vim)
j = left
k = down
l = up
; = right
n = C-left
d = C-right
, = macro(C-right right)
x = cut
c = copy
v = paste
delete = C-delete
backspace = C-backspace
	a = macro(C-right C-right C-right C-right C-right C-right C-right C-right C-right C-right C-right C-right C-right C-right C-right C-right C-right C-right C-right C-right C-right C-right C-right C-right C-right C-right C-right C-right C-right C-right)
	g = macro(C-left C-left C-left C-left C-left C-left C-left C-left C-left C-left C-left C-left C-left C-left C-left C-left C-left C-left C-left C-left C-left C-left C-left C-left C-left C-left C-left C-left C-left C-left)
s = macro(C-right C-right C-right C-right C-right C-right C-right C-right C-right C-right C-right C-right C-right C-right C-right C-right C-right C-right C-right C-right C-right C-right C-right C-right C-right C-right C-right C-right C-right enter)
[vim_mode+shift]
j = S-left
k = S-down
l = S-up
; = S-right
n = C-S-left
d = C-S-right
, = macro(C-S-right S-right)
x = cut
c = copy
v = paste
delete = C-delete
backspace = C-backspace
	a = macro(C-S-right C-S-right C-S-right C-S-right C-S-right C-S-right C-S-right C-S-right C-S-right C-S-right C-S-right C-S-right C-S-right C-S-right C-S-right C-S-right C-S-right C-S-right C-S-right C-S-right C-S-right C-S-right C-S-right C-S-right C-S-right C-S-right C-S-right C-S-right C-S-right C-S-right)
g = macro(C-S-left C-S-left C-S-left C-S-left C-S-left C-S-left C-S-left C-S-left C-S-left C-S-left C-S-left C-S-left C-S-left C-S-left C-S-left C-S-left C-S-left C-S-left C-S-left C-S-left C-S-left C-S-left C-S-left C-S-left C-S-left C-S-left C-S-left C-S-left C-S-left C-S-left)
